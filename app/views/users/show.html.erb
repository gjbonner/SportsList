<h1>User Show Page</h1>
<h1><%= @user.name %></h1>
<h3><%= flash[:notice] %></h3>
<% if @user.purchases.any? %>
  <h3>User Purchases</h3>
  <% @user.purchases.each do |deal| %>
    <% if deal.seller_id != deal.buyer_id %>
      <p><%= deal.product.name %></p>
    <% end %>
  <% end %>
<% end %>
<% if @user.sales.any? %>
  <h3>User Sales</h3>
  <% @user.sales.each do |deal|%>
    <p><%= deal.product.name  %></p>
  <% end %>
<% end %>
<p><%= link_to "Sell a product", new_product_path %></p>
